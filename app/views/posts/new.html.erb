<div class="container">
  <% if flash[:notice] %>
    <p class="notice-miss"><%= flash.notice %></P>
  <% end %>
  <%= render "shared/error", obj: @post %>
  <div class="title">
    <h2>タスク新規登録</h2>
  </div>

  <div class="content">
    <%= form_for @post do |f| %>
    <table>
      <tr>
        <th><%= f.label :title, "タスク名" %></th>
        <td><%= f.text_field :title, class:"word-field" %></td>
      </tr>
      <tr>
        <th><%= f.label :start_day_at, "日付" %></th>
        <td><%= f.datetime_field :start_at, class:"word-field" %></td>
      </tr>
      <tr>
        <th><%= f.label :times, "所要時間" %></th>
        <td><%= f.text_field :times, class:"word-field" %></td>
      </tr>
      <tr>
        <th><%= f.label :importance, "重要度" %></th>
        <td><%= f.radio_button :importance, "低" %>低
            <%= f.radio_button :importance, "中" %>中
            <%= f.radio_button :importance, "高" %>高
            <%= f.radio_button :importance, "最優先" %>最優先
        </td>
      </tr>
      <tr>
        <th><%= f.label :memo, "内容" %></th>
        <td><%= f.text_area :memo,class:"word-area"%></td>
      </tr>
    </table>
    <div class="menu">
      <ul>
        <li><%= f.submit "登録完了する", class:"menu-item" %></li>
        <li><%= link_to "一覧へ戻る", "/", class:"menu-item"%></li>
      </ul>
    </div>
    <% end %>

  </div>


</div>
