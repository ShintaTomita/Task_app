<div class="container">
  <% if flash[:notice] %>
    <p class="notice"><%= flash.notice %></P>
  <% end %>
  <div class="title">
    <h2>タスク一覧</h2>
  </div>

  <div class="main-form">
    <table>
      <thead>
        <tr>
          <th>No,</th>
          <th>タイトル</th>
          <th>日付</th>
          <th>所要時間</th>
          <th>重要度</th>
          <th>内容</th>
          <th>更新日</th>
          <th>確認</th>
          <th>編集</th>
          <th>削除</th>
      　</tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= post.start_at.to_s(:datetime_jp) %></td>
          <td><%= post.times %></td>
          <td><%= post.importance %></td>
          <td><%= post.memo %></td>
          <td><%= post.updated_at.to_s(:datetime_jp)%></td>
          <td><%= link_to "確認", "posts/#{post.id}" %></td>
          <td><%= link_to "編集", "/posts/#{post.id}/edit" %></td>
          <td><%= link_to "削除", "/posts/#{post.id}", method: :delete %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="menu">
      <%= link_to "タスクを追加する", :new_post, class:"menu-item"%>
    </div>






  </div>

</div>
